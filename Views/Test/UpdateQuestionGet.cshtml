@model Question

@{
    ViewData["Title"] = "Update Question";
}

<h1 class="bg-info text-white">Update Question</h1>
<a asp-action="ReadQuestions" class="btn btn-secondary">View all</a>
<h2 class="bg-light">@ViewBag.Question</h2>

<div asp-validation-summary="All" class="text-danger btn-light"></div>


<form asp-action="UpdateQuestionPost" asp-route-id="@Model.QuestionId" method="post">
    <div class="form-group">
        <label asp-for="QuestionId"></label>
        <input type="text" asp-for="QuestionId" disabled class="form-control" />
    </div>  
    <div class="form-group">
        <label asp-for="QuestionString"></label>
        <input type="text" asp-for="QuestionString" class="form-control" />
        <span asp-validation-for="QuestionString" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update</button>
</form>