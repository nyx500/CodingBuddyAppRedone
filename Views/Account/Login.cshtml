@*Attribution for how to move a Bootstrap element further down the page: https://stackoverflow.com/questions/31574775/move-a-bootstrap-input-element-further-down-the-page*@

@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

@*<div style="font-weight: 800!important; color:red;" asp-validation-summary="ModelOnly" class="text-danger"></div>*@


<div class="login-container">
    <div class="login-page w-100 m-0 container-fluid p-0 align-self:center">
        <div class="row justify-content-left align-items-center mx-0 px-0 py-0 h-100">
            <div class="col w-100 text-center col-11 col-sm-9 col-md-7 col-lg-6 mt-3 mb-2 px-0 mx-0">
                <div class="card form-card">
                    <h2><strong>Log In</strong></h2>
                    <div class="row">
                        <div class="col mx-0">
                            @*Uses the asp-route-returnUrl tag helper to specify the value for the returnURL
                            query string parameter in the Login action method in "Account Controller"*@
                            <form id="login-form" method="post" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                                <fieldset>
                                    <div class="form-card login-form-card">
                                        @*Displays login error if bad username & password combo*@
                                        <p id="login-error-message">
                                            @Html.ValidationMessage("invalidLogin")
                                        </p>
                                        <div class="form-group login-form-group">
                                            <label style="color:white;" for="login-username-input">Username:</label>
                                            <input asp-for="Username" class="form-control" id="login-username-input" />
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                        <div class="form-group login-form-group">
                                            <label style="color:white;" for="login-password-input">Password:</label>
                                            <input type="password" asp-for="Password" class="form-control" id="login-password-input" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div id="checkbox-form-group">
                                            <input type="checkbox" title="Remember Me" asp-for="RememberMe" id="remember-me-checkbox"class="form-check" />
                                            <label for="remember-me-checkbox" style="color: white;">Keep me logged in</label>
                                        </div>
                                    </div>
                                    @* Button logs user in if the data is valid, otherwise displays the Login view again with
                                    validation messages.*@
                                    <div id="submit-button-wrapper" class="row">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn" id="login-form-submit">Log In</button>
                                        </div>
                                    </div>
                                </fieldset>
                                <br />
                                <div id="not-registered-wrapper" class="row">
                                    <div class="col-sm-12"><b id="not-registered-label">Not registered?</b></div>
                                     <a id="not-registered-link" asp-action="RegisterInSteps">Sign up as a new user</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*Code-Connect-Create Graphics/Logo on right-hand-side of the screen*@
<div class="splitscreen right">
    <div class="slogan-container">
        <img id="slogan-graphics" src="~/assets/codeConnectCreate.svg" alt="White text in black bubble background saying Code, Connect Create." />
    </div>
</div>